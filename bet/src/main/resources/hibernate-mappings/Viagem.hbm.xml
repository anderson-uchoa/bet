<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="lps.bet.basico.tiposDados">
    <class name="Viagem" table="VIAGEM">

        <id name="viagemID" column="viagemID" type="int">
            <generator class="increment">
            </generator>
        </id>

        <property name="hora" type="java.util.Calendar" update="true" insert="true" column="hora"/>
		
		<property name="numViagens" type="int" update="true" insert="true" column="numViagens"/>

        <many-to-one
            name="cartao"
            class="Cartao"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="CARTAO_FK"
            not-null="true"
			lazy="false"
        />
		
		<many-to-one
            name="linha"
            class="Linha"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="LINHA_FK"
            not-null="true"
			lazy="false"
        />

    </class>

</hibernate-mapping>
